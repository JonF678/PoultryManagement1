{
  "appId": "com.poultrymanager.app",
  "productName": "Poultry Manager",
  "electronVersion": "37.2.5",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "electron/**/*",
    "index.html",
    "css/**/*",
    "js/**/*",
    "manifest.json",
    "sw.js"
  ],

  "mac": {
    "category": "public.app-category.business",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "linux": {
    "category": "Office",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}